<ol class="breadcrumb">
    <li class="breadcrumb-item"><a href="/list" class="text-info"> Orders</a></li>
    <li class="breadcrumb-item active">Edit Status</li>
</ol>

<h1 class="diaplay-4">Edit Order Status</h1>

<form method="post" action="/delivery/order/status">
    <div class="form-group">
        <label for="order_id">Order ID</label>
        <input type="text" readonly name="order_id" class="form-control" value="<%= order.order_id %>">
    </div>
    <div class="form-group">
        <label for="product_id">Product Id</label>
        <input type="text" disabled name="product_id" class="form-control" value="<%= order.product_id %>">
    </div>
    <div class="form-group">
        <label for="seller_id">Seller Id</label>
        <input type="text" disabled name="seller_id" class="form-control" value="<%= order.seller_id %>">
    </div>
    <div class="form-group">
        <label for="user_address">User Address</label>
        <input type="text" disabled name="user_address" class="form-control" value="<%= order.user_address %>">
    </div>
    <!-- Source: https://getbootstrap.com/docs/4.0/components/dropdowns/ -->

    <div class="form-group">
        <label for="statusDropDown">Change Status</label>
        <select class="form-control btn btn-warning dropdown-toggle" id="statusDropDown" name="status">
            <option>ORDER RECEIVED</option>
            <option>PICKED UP</option>
            <option>DELIVERED</option>
        </select>
    </div>
    <button class="btn btn-outline-danger" value="Edit" style="width: 15%">Edit
        <i class="fa fa-pencil-square-o" aria-hidden="true"></i>
    </button>
</form>
